word-wrap()
  word-break:     break-word
  -webkit-hyphens: auto
  -moz-hyphens:    auto
  hyphens:         auto

a:active
  color: inherit

a:visited
  color: inherit

a:hover
  color: inherit
  text-decoration: none

body
  word-wrap()
  font-size: 18px

  @media screen and (min-width: 768px)
    font-size: 24px

  font-family: equity-text
  line-height: 1.35
  height: 100%
  padding: 0
  margin: 0

h1,
h2,
h3
  font-family: concourse-t7
  font-weight: 400
  font-feature-settings: "liga"

// Content
#content
  max-width: 754px
  margin: 0 auto
  padding-left: 1.5em
  padding-right: 1.5em

// Footer
#footer
  background: #242124
  padding-bottom: 2vmin
